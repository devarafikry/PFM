<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.puforma5">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchSetting"
            android:label="@string/title_activity_search_setting" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".NavigationDrawer"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".CreatorActivity"
            android:label="@string/title_activity_creator"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".CreatePost" />
        <activity
            android:name=".PostView"
            android:label="@string/title_activity_post_view"
            android:theme="@style/MyMaterialTheme" />
    </application>

</manifest>